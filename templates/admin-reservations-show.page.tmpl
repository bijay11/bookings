{{template "admin" .}}
{{define "page-title"}}
Reservation
{{ end }}

{{define "content"}}
{{$res := index .Data "reservation"}}
{{$src := index .StringMap "src"}}
<div class="col-md-12">
  <p><strong>Arrival</strong>: {{formatDate $res.StartDate }}</p>
  <p><strong>Departure</strong>: {{formatDate $res.EndDate }}</p>
  <p><strong>Room</strong>: {{ $res.Room.Name }}</p>

  <form
    action="/admin/reservations/{{ $src }}/{{ $res.ID }}"
    method="POST"
    novalidate
  >
    <input type="hidden" name="csrf_token" value="{{.CSRFToken}}" />

    <div class="form-group">
      <label for="first_name">First Name:</label>
      {{with .Form.Errors.Get "first_name"}}
      <label class="text-danger">{{.}}</label>

      {{ end }}

      {{ $err := .Form.Errors.Get "first_name" }}
      <input type="text" name="first_name" id="first_name" class="form-control
      {{ with .Form.Errors.Get "first_name" }} is-invalid{{ end }}" value="{{
        $res.FirstName
      }}" required autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="last_name">Last Name:</label>
      {{with .Form.Errors.Get "last_name"}}
      <label class="text-danger">{{.}}</label>

      {{ end }}
      <input type="text" name="last_name" id="last_name" class="form-control
      {{ with .Form.Errors.Get "last_name" }} is-invalid{{ end }}" value="{{
        $res.LastName
      }}" required autocomplete="off" />
    </div>

    <div class="form-group">
      <label for="email">Email:</label>
      {{with .Form.Errors.Get "email"}}
      <label class="text-danger">{{.}}</label>

      {{ end }}
      <input
        type="email"
        name="email"
        id="email"
        class="form-control"
        value="{{ $res.Email }}"
        required
        autocomplete="off"
      />
    </div>

    <div class="form-group">
      {{with .Form.Errors.Get "phone"}}
      <label class="text-danger">{{.}}</label>

      {{ end }}
      <label for="phone_number">Phone Number: </label>
      <input
        type="text"
        name="phone_number"
        id="phone_number"
        class="form-control"
        value="{{ $res.Phone }}"
        required
        autocomplete="off"
      />
    </div>

    <hr />
    <div class="d-flex">
      <button type="submit" class="btn btn-primary me-3">Save</button>
      <a href="/admin/reservations-{{ $src }}" class="btn btn-warning me-3"
        >Cancel</a
      >
      <a href="#!" class="btn btn-info me-3" onclick="processRes({{ $res.ID }})"
        >Mark as Processed</a
      >
      <a
        href="#!"
        class="btn btn-danger ms-auto"
        onclick="deleteRes({{ $res.ID }})"
        >Delete</a
      >
    </div>
  </form>
</div>
{{ end }}

{{define "js"}}
{{$src := index .StringMap "src"}}
<script>
  function processRes(id) {
    attention.custom({
      icon: 'warning',
      msg: 'Are you sure you want to mark this reservation as processed?',
      callback: function (result) {
        if (result != false) {
          window.location.href = '/admin/process-reservation/{{$src}}/' + id;
        }
      },
    });
  }

  function deleteRes(id) {
    attention.custom({
      icon: 'warning',
      msg: 'Are you sure you want to delete this reservation?',
      callback: function (result) {
        if (result != false) {
          window.location.href = '/admin/delete-reservation/{{$src}}/' + id;
        }
      },
    });
  }
</script>
{{ end }}
